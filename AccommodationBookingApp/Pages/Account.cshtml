@page
@model AccommodationBookingApp.Pages.AccountModel
@{
    <div class="container">
        <div class="row">
            <h2>Account details</h2>
        </div>
        <div class="row">
            <h4>First Name</h4>
        </div>
        <div class="row">
            <p>@Model.ApplicationUser.FirstName</p>
        </div>
        <div class="row">
            <h4>Last Name</h4>
        </div>
        <div class="row">
            <p>@Model.ApplicationUser.LastName</p>
        </div>
        <div class="row">
            <h4>Email</h4>
        </div>
        <div class="row">
            <p>@Model.ApplicationUser.Email</p>
        </div>
        <div class="row">
            <h4>Type of account</h4>
        </div>
        <div class="row">
            @if (User.IsInRole("Host"))
            {
                <p>Host account</p>
            }
            @if (User.IsInRole("User"))
            {
                <p>User account</p>
            }
        </div>
        
        @if (User.IsInRole("Host"))
        {
            <div class="row">
                <h4>Address</h4>
            </div>
            <div class="row">
                <p>@Model.ApplicationUser.Address</p>
            </div>
            <div class="row">
                <h4>City</h4>
            </div>
            <div class="row">
                <p>@Model.ApplicationUser.City</p>
            </div>
            <div class="row">
                <h4>Country</h4>
            </div>
            <div class="row">
                <p>@Model.ApplicationUser.Country</p>
            </div>
            <div class="row">
                <h4>Mobile phone number</h4>
            </div>
            <div class="row">
                <p>@Model.ApplicationUser.PhoneNumber</p>
            </div>
        }
        <div class="row">
            <a asp-page="/ChangePassword" class="btn btn-warning">Change password</a>
        </div>
        <div class="row">
        @if (User.IsInRole("User"))
        {
            <a asp-page="/UpdateAccount" class="btn btn-outline-warning">Update personal information</a>
        }
        @if (User.IsInRole("Host"))
        {
            <a asp-page="/UpdateHostAccount" class="btn btn-outline-warning">Update personal information</a>
        }
        </div>
    </div>
}
