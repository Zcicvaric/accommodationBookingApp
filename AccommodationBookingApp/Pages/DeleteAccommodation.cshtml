@page
@model AccommodationBookingApp.Pages.DeleteAccommodationModel
@{
    ViewData["Title"] = "Delete accommodation";
}
@{
    <div class="row">
        <h2>Are you sure you want to delete this accommodation?</h2>
        <h4>The accommodation and related bookings will be deleted!</h4>
    </div>
    <div class="row">
        <h4>There are @Model.NumberOfBookingsForAccommodation bookings for this accommodation</h4>
    </div>
    <div class="row">
        <form method="post">
            <button type="submit" asp-route-accommodationId="@Model.AccommodationId" class="btn btn-danger">Delete accommodation</button>
        </form>
    </div>
    <div class="row mt-4">
        <a asp-page="/Accommodations">Return to the accommodations page</a>
    </div>
}
