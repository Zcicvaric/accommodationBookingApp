@page
@model AccommodationBookingApp.Pages.UpdateHostAccountModel
@{
}
<div class="container">
    <form method="post">
        <div asp-validation-summary="All" class="text-warning"></div>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" value="@Model.ApplicationUser.FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" value="@Model.ApplicationUser.LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" value="@Model.ApplicationUser.Email" class="form-control" />
            <span asp-validation-for="Email" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" value="@Model.ApplicationUser.Address" class="form-control" />
            <span asp-validation-for="Address" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label>Mobile Phone Number (Digits only)</label>
            <input asp-for="MobilePhoneNumber" value="@Model.ApplicationUser.PhoneNumber" class="form-control" />
            <span asp-validation-for="MobilePhoneNumber" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="City"></label>
            <input asp-for="City" value="@Model.ApplicationUser.City" class="form-control" />
            <span asp-validation-for="City" class="text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country"></label>
            <input asp-for="Country" value="@Model.ApplicationUser.Country" class="form-control"/>
            <span asp-validation-for="Country" class="text-warning"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Update</button>
    </form>
</div>
