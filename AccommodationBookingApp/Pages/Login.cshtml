@page
@model AccommodationBookingApp.Pages.LoginModel
@inject Microsoft.AspNetCore.Identity.SignInManager<AccommodationBookingApp.DataAccess.Entities.ApplicationUser> applicationUser;
@{
    ViewData["Title"] = "Login";
}

    <form method="post" class="mt-2">
        <div class="form-group">
            <label>Email</label>
            <input type="email" asp-for="User.Email" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-4">Register</button>
    </form>

