@page
@model AccommodationBookingApp.Pages.Admin.DeleteBookingModel
@{
    ViewData["Title"] = "Delete booking";
}
@{ 
    <div class="container">
        <div class="row">
            <h4>Are you sure you want to delete this booking?</h4>
            <h2>Once the booking is deleted, it can't be restored</h2>
        </div>
        <div class="row">
            <form method="post">
                <button type="submit" asp-route-bookingId="@Model.BookingId" class="btn btn-danger">Delete</button>
            </form>
        </div>
        <div class="row">
            <a asp-page="/BookingDetails" asp-route-bookingId="@Model.BookingId">Click here to return to the booking</a>
        </div>
    </div>
}
