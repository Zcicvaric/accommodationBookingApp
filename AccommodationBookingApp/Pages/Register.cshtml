@page
@model AccommodationBookingApp.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}


<form method="post" class="mt-2">
    <div asp-validation-summary="All" class="text-warning"></div>
    <div class="form-group">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-warning"></span>
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-warning"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-warning"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-warning"></span>
    </div>
    <div class="form-group">
        <label>Password confirm</label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
    </div>
    <div class="form-group">
        <label>Do you want to register as a Host?</label>
        <a asp-page="/RegisterAsHost">Click here to register as host</a>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Register</button>
</form>
