@page
@model AccommodationBookingApp.Pages.ReservationsModel
@{
    <div class="row">
        <h2>Pending reservations:</h2>
    </div>
    @if (Model.PendingReservations == null || Model.PendingReservations.Count == 0)
    {
        <div class="row">
            <p>No pending reservations.</p>
        </div>
    }
    else
    {
        @foreach (AccommodationBookingApp.DataAccess.Entities.Booking booking in Model.PendingReservations)
        {
            <div class="row">
                <p>@booking.Accommodation.Name</p>
                <p>@booking.CheckInDate.Date.ToShortDateString()</p>
                <p>@booking.CheckOutDate.Date.ToShortDateString()</p>
                <p>@booking.ApplicationUser.UserName</p>
                <form method="post">
                    <button type="submit" class="btn btn-sm btn-success" asp-page-handler="ApproveBooking" asp-route-BookingId="@booking.Id">Approve</button>
                    <button type="submit" class="btn btn-sm btn-danger" asp-page-handler="DeclineBooking" asp-route-BookingId="@booking.Id">Decline</button>
                </form>
            </div>
        }
    }

    <div class="row">
        <h2>Approved reservations:</h2>
    </div>
    @if (Model.ApprovedReservations == null || Model.ApprovedReservations.Count == 0)
    {
        <div class="row">
            <p>No approved reservations.</p>
        </div>
    }
