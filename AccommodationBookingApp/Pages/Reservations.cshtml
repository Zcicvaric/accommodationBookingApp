@page
@model AccommodationBookingApp.Pages.ReservationsModel
@{
    ViewData["Title"] = "Reservations";
}
@{

    @if (Model.PendingReservations != null && Model.PendingReservations.Count > 0)
    {
        <div class="row">
            <h2>Pending reservations:</h2>
        </div>

        @foreach (var booking in Model.PendingReservations)
        {
            <div class="row">
                <label class="col-md-3 order-md-1">Accommodation name:</label>
                <p class="col-md-3 order-md-6">@booking.Accommodation.Name</p>
                <label class="col-md-2 order-md-2">Check-in date:</label>
                <p class="col-md-2 order-md-7">@booking.CheckInDate.Date.ToShortDateString()</p>
                <label class="col-md-2 order-md-3">Check-out date:</label>
                <p class="col-md-2 order-md-8">@booking.CheckOutDate.Date.ToShortDateString()</p>
                <label class="col-md-2 order-md-4">Guest's E-mail:</label>
                <a href="mailto:@booking.ApplicationUser.UserName" class="col-md-2 order-md-9 mb-0 mb-sm-2">@booking.ApplicationUser.UserName</a>
                <label class="col-md-3 order-md-5">Details</label>
                <a class="col-md-3 order-md-10 mb-5 mb-md-0" asp-page="/BookingDetails" asp-route-bookingId="@booking.Id" asp-route-accommodationId="@booking.Accommodation.Id">See details</a>
            </div>
        }
    }


